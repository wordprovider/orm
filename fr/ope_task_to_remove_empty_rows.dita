<task id="ope_task_to_remove_empty_rows" xml:lang="fr-FR">
    <title>Comment supprimer des lignes vides</title>
    <prolog>
        <metadata>
            <keywords><indexterm>lignes<indexterm>supprimer les vides</indexterm></indexterm><indexterm>supprimer les lignes vides</indexterm><indexterm>lignes vides<indexterm>supprimer</indexterm></indexterm><indexterm>filtrer les lignes vides</indexterm></keywords>
